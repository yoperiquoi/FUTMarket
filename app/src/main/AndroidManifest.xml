<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.futmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FUTMarket">
        <activity android:name=".view.ActiviteFiltre" />
        <activity android:name=".view.OuverturePack" />
        <activity android:name=".view.ActivitePrincipale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ActiviteMode" />
        <activity android:name=".view.ActiviteInscription" />
        <activity android:name=".view.ActiviteConnexion" />
        <activity android:name=".view.SelectionPack" />
        <activity android:name=".view.MesJoueurs" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>